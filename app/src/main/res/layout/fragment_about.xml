<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/fragment_about_app_icon"
            android:layout_width="@dimen/fragment_about_app_logo"
            android:layout_height="@dimen/fragment_about_app_logo"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:src="@drawable/icon_expense" />

        <TextView
            android:id="@+id/fragment_about_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_about_app_icon"
            android:layout_centerHorizontal="true"
            android:text="@string/fragment_about_app_name"
            android:textSize="@dimen/fragment_about_app_title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

/

