<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/dialog_create_category_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        >
        <TextView
            android:id="@+id/dialog_create_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:text="Create a new Category"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                >
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/dialog_create_expense_label_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name" />

        <EditText
            android:id="@+id/dialog_create_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:singleLine="false"
            android:text=""
            android:imeOptions="actionDone"
            android:backgroundTint="@color/gray_700"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:text="TransactionType"/>

                <Spinner
                    android:id="@+id/dialog_create_category_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:theme="@style/SpinnerStyle"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_create_expense_label_amount"
                android:text="Budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/dialog_create_category_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:imeOptions="actionNext"
                android:backgroundTint="@color/gray_700"
                />
        </LinearLayout>

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingLeft="24dp"
    >

    <Button
        android:id="@+id/dialog_create_expense_button_create"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/dialog_create_expense_button_create"
        android:layout_alignParentRight="true"
        style="?attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/dialog_create_expense_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toStartOf="@id/dialog_create_expense_button_create"
        android:layout_toLeftOf="@id/dialog_create_expense_button_create"
        android:text="@string/dialog_create_expense_button_cancel"
        style="?attr/borderlessButtonStyle"/>

</RelativeLayout>

</LinearLayout>